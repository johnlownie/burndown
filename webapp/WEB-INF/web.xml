<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <distributable/>
    <filter>
        <filter-name>MaintenanceModeFilter</filter-name>
        <filter-class>ca.jetsphere.core.security.maintenance.MaintenanceModeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MaintenanceModeFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Initialization Servlet</servlet-name>
        <servlet-class>ca.jetsphere.core.servlet.InitializationServlet</servlet-class>
        <init-param>
            <param-name>ATTACHMENT_MAX_SIZE</param-name>
            <param-value>25</param-value>
        </init-param>
        <init-param>
            <param-name>ATTACHMENT_UPLOAD_DIRECTORY</param-name>
            <param-value>/attachment_uploads</param-value>
        </init-param>
        <init-param>
            <param-name>AUDIT-TRAIL</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>CONFIRMATION</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>DEVELOPER</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>SECRETKEY</param-name>
            <param-value>6LeAtQoTAAAAAGSVaR5oGvNK1ln4w3MV6Vb6NJNO</param-value>
        </init-param>
        <init-param>
            <param-name>SITEKEY</param-name>
            <param-value>6LeAtQoTAAAAAPxZPSljJs3K2Qi3y0zhlsTy40gB</param-value>
        </init-param>
        <init-param>
            <param-name>THEME</param-name>
            <param-value>lime</param-value>
        </init-param>
        <init-param>
            <param-name>TIMEZONE</param-name>
            <param-value>America/Toronto</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>ca.jetsphere.core.servlet.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/conf/struts-config-core.xml,/WEB-INF/conf/struts-config-burndown.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Initialization Servlet</servlet-name>
        <url-pattern>*.init</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>400</error-code>
        <location>/400.do</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.do</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/404.do</location>
    </error-page>
    <error-page>
        <error-code>420</error-code>
        <location>/420.do</location>
    </error-page>
    <!--<error-page>-->
    <!--<error-code>500</error-code>-->
    <!--<location>/500.do</location>-->
    <!--</error-page>-->
    <taglib>
        <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
        <taglib-location>/WEB-INF/tlds/struts-bean.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
        <taglib-location>/WEB-INF/tlds/struts-html.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
        <taglib-location>/WEB-INF/tlds/struts-logic.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>/WEB-INF/struts-nested.tld</taglib-uri>
        <taglib-location>/WEB-INF/tlds/struts-nested.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>/WEB-INF/struts-template.tld</taglib-uri>
        <taglib-location>/WEB-INF/tlds/struts-template.tld</taglib-location>
    </taglib>
    <taglib>
        <taglib-uri>/WEB-INF/struts-tiles.tld</taglib-uri>
        <taglib-location>/WEB-INF/tlds/struts-tiles.tld</taglib-location>
    </taglib>
</web-app>
